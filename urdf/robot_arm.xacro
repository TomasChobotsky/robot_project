<?xml version='1.0'?>
<robot name="robot_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- === BASE LINK (root) === -->
  <link name="base">
    <visual>
      <!-- base center at z=0.05, box height 0.125 -> top at 0.1125 -->
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.14 0.14 0.125"/>
      </geometry>
      <material name="Black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.14 0.14 0.125"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.002" iyy="0.002" izz="0.003" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- === FIRST ROTATING JOINT (Z-axis) === -->
  <!-- joint placed at the top of the base: top = base origin z (0.05) + half height (0.0625) = 0.1125 -->
  <joint name="base_rotator" type="revolute">
    <parent link="base"/>
    <child link="base_rotator_link"/>
    <origin xyz="0 0 0.1125" rpy="0 0 0"/>
    <axis xyz="0 0 1"/> <!-- rotation around Z -->
    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
  </joint>

  <link name="base_rotator_link">
    <!-- thin disk / motor holder on top of base -->
    <!-- disk center at 0.005 above its local origin; with link origin at 0.1125, visual center becomes 0.1175 -->
    <visual>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.015"/> <!-- ~14 cm diameter (0.07 radius), 1.5 cm thick -->
      </geometry>
      <material name="Gray">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.07" length="0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0003" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- === SHOULDER JOINT (Y-axis) === -->
  <!-- shoulder is attached 4.5 cm above the base_rotator joint -->
  <!-- base_rotator joint origin z = 0.1125 -> shoulder bottom at 0.1125 + 0.045 = 0.1575 -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="base_rotator_link"/>
    <child link="shoulder"/>
    <origin xyz="0 0 0.045" rpy="0 1.5708 0"/>
    <axis xyz="0 -1 0"/> <!-- rotation around Y -->
    <limit effort="1000.0" lower="0" upper="1.55" velocity="0.5"/>
  </joint>


  <!-- === SHOULDER LINK === -->
  <!-- shoulder visual/collision origin is relative to shoulder link origin -->
  <link name="shoulder">
    <!-- visual origin at z=0.25 (so cylinder center is at shoulder_origin_z + 0.25) -->
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.5"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.7"/>
      <inertia ixx="0.0105" iyy="0.0105" izz="0.003" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- === ELBOW === -->
  <!-- elbow joint located at shoulder_origin + 0.5 (so at shoulder bottom z 0.1575 + 0.5 = 0.6575 world z) -->
  <joint name="shoulder_elbow" type="revolute">
    <parent link="shoulder"/>
    <child link="elbow"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="0" upper="1.55" velocity="0.5"/>
  </joint>

  <link name="elbow">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.4"/>
      </geometry>
      <material name="Green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0042" iyy="0.0042" izz="0.00006" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- === WRIST === -->
  <joint name="elbow_wrist" type="revolute">
    <parent link="elbow"/>
    <child link="wrist"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1000.0" lower="0" upper="1.55" velocity="0.5"/>
  </joint>

  <link name="wrist">
    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.15"/>
      </geometry>
      <material name="Red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.06"/>
      <inertia ixx="0.00012" iyy="0.00012" izz="0.00007" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  <!-- === GRABBER === -->
  <joint name="wrist_grabber" type="continuous">
    <parent link="wrist"/>
    <child link="grabber"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="grabber">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.00013" iyy="0.00013" izz="0.0006" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>


  

</robot>